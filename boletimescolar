# boletim_simples.py

boletim = {}

def adicionar_aluno():
    nome = input("Nome do aluno: ").strip()
    if nome in boletim:
        print("Aluno já cadastrado!")
    else:
        boletim[nome] = []
        print(f"Aluno {nome} adicionado!")

def adicionar_nota():
    nome = input("Nome do aluno: ").strip()
    if nome not in boletim:
        print("Aluno não encontrado!")
        return
    try:
        nota = float(input("Nota a adicionar: "))
        if 0 <= nota <= 10:
            boletim[nome].append(nota)
            print(f"Nota {nota} adicionada para {nome}")
        else:
            print("Nota deve ser entre 0 e 10.")
    except ValueError:
        print("Valor inválido.")

def mostrar_boletim():
    nome = input("Nome do aluno: ").strip()
    if nome not in boletim:
        print("Aluno não encontrado!")
        return
    notas = boletim[nome]
    if notas:
        media = sum(notas)/len(notas)
        print(f"Boletim de {nome}:")
        for i, n in enumerate(notas, 1):
            print(f"  Nota {i}: {n}")
        print(f"  Média: {media:.2f}")
    else:
        print(f"{nome} ainda não tem notas cadastradas.")

def menu():
    while True:
        print("\n--- Sistema de Boletim ---")
        print("1. Adicionar aluno")
        print("2. Adicionar nota")
        print("3. Mostrar boletim")
        print("4. Sair")
        opcao = input("Escolha uma opção: ")
        if opcao == "1":
            adicionar_aluno()
        elif opcao == "2":
            adicionar_nota()
        elif opcao == "3":
            mostrar_boletim()
        elif opcao == "4":
            print("Saindo...")
            break
        else:
            print("Opção inválida!")

if __name__ == "__main__":
    menu()
